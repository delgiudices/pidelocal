<div class="row">
  <div class="col-md-12">
    <div class="container">
      <div class="home-content">
        <span class="title">Comencemos con el proceso</span>
        <form class="register-form" data-toggle="validator" method="post">
          <%= token_tag %>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 col-md-offset-1">
                <label class="control-label">Nombre Completo</label>
              </div>
              <div class="col-md-6">
                <input type="text" name="store_request[full_name]" class="form-control" data-error="Este campo es requerido" required/>
              </div>
              <div class="col-md-2">
                <div class="help-block with-errors"></div>
              </div>

            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 col-md-offset-1">
                <label class="control-label">Nombre de la Tienda</label>
              </div>
              <div class="col-md-6">
                <input type="text" name="store_request[store_name]" class="form-control" data-error="Este campo es requerido" required />
              </div>
              <div class="col-md-2">
                <div class="help-block with-errors"></div>
              </div>

            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 col-md-offset-1">
                <label class="control-label">Dirección de la Tienda</label>
              </div>
              <div class="col-md-6">
                <input type="text" name="store_request[store_address]" class="form-control" data-error="Este campo es requerido" required />
              </div>
              <div class="col-md-2">
                <div class="help-block with-errors"></div>
              </div>

            </div>
          </div>


          <div class="form-group">
            <div class="row">
              <div class="col-md-3 col-md-offset-1">
                <label class="control-label">Correo Electrónico</label>
              </div>
              <div class="col-md-6">
                <input type="email" name="store_request[email]" class="form-control" required data-error="Introduzca un correo valido" />
              </div>
              <div class="col-md-2">
                <div class="help-block with-errors"></div>
              </div>

            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 col-md-offset-1">
                <label class="control-label">Telefono</label>
              </div>
              <div class="col-md-6">
                <input type="text" name="store_request[phone]" class="form-control phone-mask" required data-error="Este campo es requerido" />
              </div>
              <div class="col-md-2">
                <div class="help-block with-errors"></div>
              </div>

            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 col-md-offset-1">
                <label class="control-label">Telefono de la tienda</label>
              </div>
              <div class="col-md-6">
                <input type="text" name="store_request[store_phone]" class="form-control phone-mask" required data-error="Este campo es requerido" />
              </div>
              <div class="col-md-2">
                <div class="help-block with-errors"></div>
              </div>

            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 col-md-offset-1">
                <label class="control-label">Contraseña</label>
              </div>
              <div class="col-md-6">
                <input id="password" type="password" name="store_request[password]" class="form-control" required data-error="Este campo es requerido" />
              </div>
              <div class="col-md-2">
                <div class="help-block with-errors"></div>
              </div>

            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 col-md-offset-1">
                <label class="control-label">Confirmación de contraseña</label>
              </div>
              <div class="col-md-6">
                <input type="password" name="store_request[confirm_password]" data-match="#password" class="form-control" data-match-error="La confirmación no concuerda con la contraseña" required  data-error="Este campo es requerido" />

              </div>
              <div class="col-md-2">
                <div class="help-block with-errors"></div>
              </div>
            </div>
          </div>



          <div class="form-group">
            <div class="row">
              <div class="col-md-12 align-center">
                <button class="btn btn-pidelocal" type="submit">Solicitar</button>
              </div>
            </div>
          </div>



        </form>
      </div>
    </div>
  </div>
</div>
