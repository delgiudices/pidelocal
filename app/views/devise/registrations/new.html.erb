<div class="col-md-6 col-md-offset-3">
  <h2>Registrate en Dominicazon!</h2>
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name, :id => params[:id])) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, label: "Correo Electronico" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", label: "Contraseña" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirmación de Contraseña" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrarse" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
