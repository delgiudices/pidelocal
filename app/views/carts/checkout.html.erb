<div class="row shoppingcart">
  <div class="col-md-8">
    <form id="payment-form" method="post" action="<%= review_order_path %>" data-toggle="validator">
      <h3>Seleccione una Direccion de Envio</h3>
      <div class="form-group">
        <% @shipping_addresses.each do |sa| %>
          <div class="radio shipping-address">
            <label>
              <input type="radio" name="order[shipping_address]" value="<%= sa.city %>" required>
              <span class="address"><%= sa.name %>, <%= sa.phone %>, <%= sa.address %>, <%= sa.city %></span>
            </label>
            </li>
          </div>
        <% end %>
      </div>
      <div class="form-bd">
        <h3 class="informacion-pago">Información de Pago</h3>
        <div class="row">
          <div class="col-md-8">
            <div class="form-group">
              <label class="control-label">Numero de La Tarjeta</label>
              <input id="cardNumber" type="text" class="form-control" name="cardNumber" placeholder="Valid Card Number" required data-stripe="number" />
            </div>                            
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label>Tipo de tarjeta</label>
              <select name="card[type]">
                <option value="visa">Visa</option>
                <option value="mastercard">Master Card</option>
              </select>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-7 col-md-7">
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6 col-lg-6">
                  <label for="expMonth" class="control-label">Mes</label>
                  <input type="text" class="form-control" name="expMonth" placeholder="MM" required data-stripe="exp_month" />
                </div>
                <div class="col-xs-6 col-lg-6 pl-ziro">
                  <label for="expMonth" class="control-label">Año</label>
                  <input type="text" class="form-control" name="expYear" placeholder="YY" required data-stripe="exp_year" />
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-5 col-md-5 pull-right">
            <div class="form-group">
              <label for="expMonth" class="control-label">CVV</label>
              <input type="password" class="form-control" name="cvCode" placeholder="CV" required data-stripe="cvc" />
            </div>
          </div>
        </div>


      </div>
    </form>
    
  </div>
  <div class="col-md-4">
    <%= bootstrap_form_for @shipping_address, url: shipping_addresses_path(id: params[:id]) do |f| %>
      <div class="form-bd">
        <h3>Agregar Dirección de Envio</h3>

        <%= f.text_field :name, label: 'Nombre' %>

        <%= f.phone_field :phone, label: 'Telefono' %>

        <%= f.select :city, ShippingAddress::CITIES, label: 'Ciudad'  %>

        <%= f.text_field :address, label: 'Dirección' %>

        
        <div class="row">
          <div class="col-md-12">
            <button class="btn btn-default style-bd">Agregar Dirección</button>
          </div>
        </div>
      </div>
    <% end %>
    <form class="form-right col-md-12">
      <div class="form-bd">
        <p class="subtotal">
        <span class="text1">SUBTOTAL:</span>
        <span id="subtotal_fee" class="text2">$<%= @cart.subtotal %></span>
        </p>
        <p class="subtotal">
        <span class="text1">ENVIO:</span>
        <span id="shipping_fee" class="text2">$0.00</span>
        </p>
        <p class="subtotal">
        <span class="text1">ITBIS:</span>
        <span id="tax_fee" class="text2">$<%= @cart.tax %></span>
        </p>
        <h3>
          <span class="text3">TOTAL:</span>
          <span id="total_fee" class="text4">$<%= @cart.total %></span>
        </h3>
        <button id="review_order_button" type="button" class="btn btn-default style-bd">Revisar la Orden</button>
      </div>
    </form>
  </div>
</div>
